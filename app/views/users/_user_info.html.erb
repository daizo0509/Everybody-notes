<div class="user-info-box">
  <div class="col-xs-7 col-xs-offset-3"><h2>User info</h2></div>
      <div class="col-xs-6 col-xs-offset-3">
        <%= attachment_image_tag user, :profile_image,:fill, 120, 120, format: 'jpg', fallback: "no_image_100.jpg" %>
      </div>
      <table class="table" style="table-layout:fixed;width:100%;">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%=link_to user.name,user_path(user), class:"user-info-name"%></th>
            </tr>
          </tbody>
      </table>
      <table class="table" style="table-layout:fixed;width:100%;">
          <tbody>
              <th>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% a = Post.where(user_id:user.id) %>
                <br><%= a.count %>ページ
              </th>
              <th>
                <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                <% b = Like.where(user_id:user.id) %>
                <br><%= b.count %>ページ
              </th>
          </tbody>
        </table>

      <%#= link_to"", edit_user_path(user.id), class:"col-xs-6 col-xs-offset-3 btn btn-default glyphicon glyphicon-wrench"  %>

</div>