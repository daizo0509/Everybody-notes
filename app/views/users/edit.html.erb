<div class="col-xs-1"> </div>

<div class= "col-xs-9">
<%= form_for(@user) do |f| %>
    <div class="field">
    	<label for="name">name</label><br>
    	<%=f.text_field :name %>
    </div>
    <label class="" >ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  	</div>
  	<div class="form-group">
    	<label class="form-group" for="introduction">Introduction</label><br>
    	<%= f.text_area :introduction ,:size => "35x10"%>
    </div>


    <div class="action"><%= f.submit 'Update User' %></div>
</div>
<% end %>
