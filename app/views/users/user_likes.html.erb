<p id="notice"><%= notice %></p>
<div class="col-xs-3 side-bar"><h2>SideBar</h2>

	<div><%= render 'searches/search_form' %>
		<%= render 'users/user_info',user: @user %>
	</div>

</div>

<div class="col-xs-7  col-xs-offset-1 index-box">
	<h2 class="page-header"><%= @user.name %>のお気に入りのノート</h2>
		<% @like.each do |like| %>
	    	<div class="p-item">
			    <div class="p-title">
			    	<h3><%=link_to like.post.title,post_path(like.post) %></h3>
			    </div>
			    <p>by <%= like.post.user.name %>  <%= like.post.likes_count %>いいね！ at <%= like.post.created_at.strftime("%Y年%m月%d日") %></p>
			    <span class="glyphicon glyphicon-tags" aria-hidden="true">
				    <% like.post.tags.each do |tag| %>
					    <div class="label label-info"><%= tag.name %></div>
					<% end %>
				</span>
		  	</div>
		<% end %>
	<h4><%= paginate @like, class: "pagenate" %></h4>
	<div class="text-center button">
		<%= link_to "戻る" , user_path(@user),class:"btn btn-primary" %>
	</div>
</div>
