<div class=" col-xs-offset-2 col-xs-8 index-box">
  <table>
    <thead>
      <tr>
        <th class="" ><h4>ID</h4></th>
        <th><h4>Name</h4></th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      
        <tr>
          <td><h4><%= user.id %></h4></td>
          <td><h4><%= user.name %></h4></td>
          
          
          <td><h4><%= link_to 'Edit', edit_user_path(user) %></h4></td>
          <td><h4><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></h4></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users, class: "pagenate" %>
</div>
