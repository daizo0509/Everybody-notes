<div class=" col-xs-offset-2 .col-xs-8 .col-xs-offset-2">
	<table>
  <thead>
    <tr>
    	<th class="col-xs-1" lign="center">ID</th>
	    <th class="col-xs-7" >Title</th>
	    <th class="col-xs-1"></th>
	    <th class="col-xs-1"></th>
	    
	    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    
      <tr>
      	<td align="center"><h5><%= post.id %></h5></td>
        <td><h4><%= link_to post.title.truncate(20) ,post %></h4></td>
     
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

		<%= paginate @posts, class: "pagenate" %>
</div>