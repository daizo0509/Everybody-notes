
<p id="notice"><%= notice %></p>
<div class="col-xs-3"><h2>SideBar</h2>

	<div><%= render 'searches/search_form' %>
		<%= render 'users/user_info',user: @user %>
	</div>

</div>

<div class="col-xs-7 index-box">
	<h2 class="page-header">みんなのノート</h2>
	<table class="">
		<div>
	    <% @posts.each do |post| %>
	    	<div class="p-item">
			    <div class="p-title">
			    	<h3><%=link_to post.title,post %></h3>
			    </div>
			    <p>
			    	by <%= link_to post.user.name,user_path(post.user) %> 
			    	<span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span><%= post.likes_count %>
			    	at <%= post.created_at.strftime("%Y年%m月%d日") %></p>
			    <span class="glyphicon glyphicon-tags" aria-hidden="true"></span> <%= post.tag_list %>
		  	</div>
		<% end %>
		</table>
	<%= paginate @posts, class: "pagenate" %>
</div>
